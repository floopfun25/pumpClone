# Alternative: Web3.Storage credentials
# VITE_WEB3_STORAGE_TOKEN=your_web3_storage_token_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# App environment
VITE_APP_ENV=development
NODE_ENV=development

# Base path for deployment (GitHub Pages, etc.)
VITE_BASE_PATH=/pumpClone/

# Internationalization locale override (optional)
# VITE_I18N_LOCALE=en

# ===========================================
# SECURITY & PERFORMANCE SETTINGS
# ===========================================

# API cache duration (milliseconds)
VITE_API_CACHE_DURATION=30000

# Enable analytics (set to true in production)
VITE_ENABLE_ANALYTICS=false

# Rate limiting (requests per minute)
VITE_API_RATE_LIMIT=60

# Maximum file upload size (bytes)
VITE_MAX_UPLOAD_SIZE=5242880

# ===========================================
# TRADING CONFIGURATION
# ===========================================

# Platform fee percentage (100 = 1%)
VITE_PLATFORM_FEE_BPS=100

# Default slippage tolerance (percentage)
VITE_DEFAULT_SLIPPAGE=1

# Minimum trade amounts (in lamports)
VITE_MIN_SOL_TRADE=10000000
VITE_MIN_TOKEN_TRADE=1000000

# Token creation fee (in SOL)
VITE_TOKEN_CREATION_FEE=0.1

# ===========================================
# BONDING CURVE PARAMETERS
# ===========================================

# Virtual reserves for new tokens
VITE_VIRTUAL_SOL_RESERVES=30000000000
VITE_VIRTUAL_TOKEN_RESERVES=1073000000000000

# Graduation threshold (69 SOL in lamports)
VITE_GRADUATION_THRESHOLD=69000000000

# ===========================================
# DEVELOPMENT & DEBUG SETTINGS
# ===========================================

# Enable debug logging
VITE_DEBUG_MODE=false

# Mock transaction mode (for testing without actual blockchain)
VITE_MOCK_TRANSACTIONS=false

# Simulate program deployment (when real program not available)
VITE_SIMULATE_PROGRAM=false

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# Discord webhook for notifications (optional)
# VITE_DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Twitter API for social features (optional)
# VITE_TWITTER_API_KEY=your_twitter_api_key
# VITE_TWITTER_API_SECRET=your_twitter_api_secret

# Telegram bot for notifications (optional)
# VITE_TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# VITE_TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===========================================
# MONITORING & ERROR TRACKING
# ===========================================

# Sentry DSN for error tracking (FREE tier: 5k errors/month)
# Sign up at https://sentry.io - completely free for small projects
# REQUIRED for production to track errors
VITE_SENTRY_DSN=

# PostHog analytics key (optional)
# VITE_POSTHOG_KEY=your_posthog_key

# ===========================================
# INSTRUCTIONS
# ===========================================
#
# 1. Copy this file to .env.local:
#    cp .env.example .env.local
#
# 2. Update the placeholder values:
#    - Add your Pinata API credentials
#    - Update program addresses after deployment
#    - Configure optional integrations
#
# 3. NEVER commit .env.local to git!
#
# 4. For production deployment:
#    - Change VITE_SOLANA_NETWORK to mainnet
#    - Update all mainnet addresses
#    - Enable analytics and monitoring
#    - Use secure, unique wallet addresses
#
# ===========================================